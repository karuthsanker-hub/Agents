# ===========================================
# ARCTIC DEBATE CARD AGENT - ENVIRONMENT CONFIG
# ===========================================
# Author: Shiv Sanker
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ----- OpenAI Configuration -----
OPENAI_API_KEY=sk-proj-your-api-key-here
# Models: gpt-4o (recommended), gpt-4-turbo, gpt-3.5-turbo
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.7

# ----- Application Settings -----
APP_NAME=Arctic Debate Card Agent
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO
# ----- Server Configuration -----
HOST=127.0.0.1
PORT=8000

# ----- PostgreSQL Database -----
# For structured data storage (users, articles, logs)
# Install: https://www.postgresql.org/download/
# Create: CREATE DATABASE debate_agent;
DATABASE_URL=postgresql://postgres:password@localhost:5432/debate_agent

# ----- Redis Cache -----
# For caching and rate limiting
# Install: docker run -d -p 6379:6379 redis:alpine
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# ----- ChromaDB (Local Vector Store) -----
# For semantic search and response caching
# No external service needed - stores locally
CHROMA_PERSIST_DIR=./chroma_db

# ----- Pinecone (Optional Cloud Vector DB) -----
# For production-scale vector search
# Sign up: https://www.pinecone.io/
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=agent-knowledge

# ----- Google OAuth (Optional) -----
# For user authentication
# Setup: https://console.cloud.google.com/apis/credentials
# Create OAuth 2.0 Client ID (Web application)
# Add redirect URI: http://127.0.0.1:8000/auth/callback
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# ----- Email Whitelist -----
# Comma-separated list of allowed emails. If empty, all Google accounts can login.
ALLOWED_EMAILS=user1@gmail.com,user2@gmail.com

# ----- Security -----
SECRET_KEY=change-this-to-a-random-string-use-secrets-token

# ----- Browser Automation (Optional) -----
BROWSER_HEADLESS=false
BROWSER_TIMEOUT=30000
